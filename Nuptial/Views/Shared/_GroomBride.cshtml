<div id="fh5co-groom-bride">
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2 text-center heading-section animate-box">
                <h2>@Model.Title</h2>
            </div>
        </div>
        <div class="row padding">
            <div class="couple-wrap">
                <div class="col-md-6 nopadding animate-box">
                    <img src="../../images/@Model.Groom.Picture" class="img-responsive" alt="Free HTML5 Bootstrap Template by FreeHTML5.co">
                </div>
                <div class="col-md-6 nopadding animate-box">
                    <div class="couple-desc">
                        <h3>@Model.Groom.FirstName @Model.Groom.LastName</h3>
                        <p>@Model.Groom.Biography</p>
                        <p class="fh5co-social-icons">
                            <a target="_blank" rel="noopener noreferrer" href="@Model.Groom.Twitter"><i class="icon-twitter2"></i></a>
                            <a target="_blank" rel="noopener noreferrer" href="@Model.Groom.Facebook"><i class="icon-facebook2"></i></a>
                            <a target="_blank" rel="noopener noreferrer" href="@Model.Groom.Instagram"><i class="icon-instagram"></i></a>
                            <a target="_blank" rel="noopener noreferrer" href="@Model.Groom.Dribbble"><i class="icon-dribbble2"></i></a>
                            <a target="_blank" rel="noopener noreferrer" href="@Model.Groom.Youtube"><i class="icon-youtube"></i></a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <div class="row padding">
            <div class="couple-wrap">
                <div class="col-md-6 col-md-push-6 nopadding animate-box">
                    <img src="../../images/@Model.Bride.Picture" class="img-responsive" alt="Free HTML5 Bootstrap Template by FreeHTML5.co">
                </div>
                <div class="col-md-6 col-md-pull-6 nopadding animate-box">
                    <div class="couple-desc">
                        <h3>@Model.Bride.FirstName @Model.Bride.LastName</h3>
                        <p>@Model.Groom.Biography</p>
                        <p class="fh5co-social-icons">
                            <a target="_blank" rel="noopener noreferrer" href="@Model.Bride.Twitter"><i class="icon-twitter2"></i></a>
                            <a target="_blank" rel="noopener noreferrer" href="@Model.Bride.Facebook"><i class="icon-facebook2"></i></a>
                            <a target="_blank" rel="noopener noreferrer" href="@Model.Bride.Instagram"><i class="icon-instagram"></i></a>
                            <a target="_blank" rel="noopener noreferrer" href="@Model.Bride.Dribbble"><i class="icon-dribbble2"></i></a>
                            <a target="_blank" rel="noopener noreferrer" href="@Model.Bride.Youtube"><i class="icon-youtube"></i></a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>